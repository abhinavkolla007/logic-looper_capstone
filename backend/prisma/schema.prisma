generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DailyScore {
  id        String   @id @default(cuid())
  userId    String
  score     Int
  date      DateTime
  createdAt DateTime @default(now())
}

model Leaderboard {
  id        String   @id @default(cuid())
  userId    String
  totalScore Int
  updatedAt DateTime @updatedAt
}